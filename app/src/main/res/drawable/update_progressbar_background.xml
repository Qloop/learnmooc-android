<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:startColor="#84898F"
                android:centerColor="#84898F"
                android:centerY="0.75"
                android:endColor="#84898F"
                android:angle="270"
                />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:startColor="#84898F"
                    android:centerColor="#2FB9F9"
                    android:centerY="0.75"
                    android:endColor="#2FB9F9"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:startColor="#2FB9F9"
                    android:centerColor="#2FB9F9"
                    android:centerY="0.75"
                    android:endColor="#2FB9F9"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>

</layer-list>